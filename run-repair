#!/usr/bin/env bash

echo "ğŸ” Detecting operating system..."

if [[ "$OSTYPE" == "linux-gnu"* || "$OSTYPE" == "darwin"* ]]; then
  echo "ğŸ§ Detected Unix-based OS. Running Bash repair script..."
  bash scripts/repair_project.sh
elif [[ "$OSTYPE" == "msys"* || "$OSTYPE" == "win32" || "$OS" == "Windows_NT" ]]; then
  echo "ğŸªŸ Detected Windows OS. Running PowerShell repair script..."
  powershell -ExecutionPolicy Bypass -File scripts/repair_project.ps1
else
  echo "âŒ Unsupported OS: $OSTYPE"
  exit 1
fi
